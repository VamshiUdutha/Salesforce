// Create List Collection class object...
List<string> lstName = new List<string>();

// Display the Collection size..
system.debug('Collection size is...: '+ lstName.size());

// Adding the elements to collection...
lstName.Add('Apex');
lstName.Add('Salesforce');
lstName.Add('Welcome');
lstName.Add('India');

system.debug('After Adding the Elements Collection size is...: '+ lstName.size());

// Display the collection elements..
system.debug('Collection elements are...: '+ lstName);

// Collection Elements...
for(integer counter = 0; counter < lstName.Size() ; counter++)
{
    system.debug('Collection element is...: '+ lstNAme.get(counter));
}

// Collection Elements using "Enhanced For Loop"
for(string st : lstName)
{
    system.debug('Element Name is...: '+ st);
}

// Adding Duplicate elements in the collection..

lstName.Add('Salesforce');

system.debug('Collection size after adding Duplicate elements...: ' + lstName.size());

// Adding Collection of elements at a time...
string[] countryNames = new string[]{'USA','China','Australia','Japan','UK','Middle East'};
    
lstName.AddAll(countryNames);

system.debug('After adding the elements, Collection size is...: '+ lstName.size());

// Inserting element at the specified position...

system.debug('Elements are....: '+ lstName);

lstName.Add(1,'Hyderabad');

system.debug('After Insert, Elements are....: '+ lstName);

// Remove the elements from the collection..
lstName.Remove(2);

system.debug('After Removing, Elements are...: '+ lstName);

// Sort the elements...
lstNAme.Sort();

system.debug('After Sorting, Collection elements are...: '+ lstName);

// Remove all elements from collection..
lstName.Clear();

system.debug('After removing all elements, Collection size is...: '+ lstName.size());

// Check collection is empty or not...
if(lstName.isEmpty())
{
    system.debug('Collection is Empty.');
}
else
    system.debug('Collection is Not Empty.');
